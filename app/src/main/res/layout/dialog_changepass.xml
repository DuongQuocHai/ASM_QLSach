<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icontwo"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="ĐỔI MẬT KHẨU"
        android:textColor="#FF9800"
        android:textSize="25dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/edt_mkcu_dialog_changepass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="37.75dp"
            android:hint="Mật khẩu cũ"
            android:paddingBottom="19.50dp"
            android:textColor="#FF9800"
            android:inputType="textPassword"
            android:textColorHint="#ADFF9800" />

        <EditText
            android:id="@+id/edt_mkmoi_dialog_changepass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="37.75dp"
            android:hint="Mật khẩu mới"
            android:inputType="textPassword"
            android:paddingBottom="19.50dp"
            android:textColor="#FF9800"
            android:textColorHint="#B0FF9800" />

        <EditText
            android:id="@+id/edt_nhaplaimkmoi_dialog_changepass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="37.75dp"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:paddingBottom="19.50dp"
            android:textColor="#FF9800"
            android:textColorHint="#B0FF9800" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_xacnhan_dialog_changepass"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_btn_login"
                android:text="Xác nhận"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_huy_dialog_changepass"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_btn_login"
                android:text="Hủy"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>